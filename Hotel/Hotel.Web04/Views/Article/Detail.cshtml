@{
    ViewData["Title"] = "Tin tức";
}

@model Hotel.WebBase.Models.ArticleDetailPageViewModel

<div id="content" class="site-content">
    <!-- Parallax Effect -->
    <script type="text/javascript">jQuery(document).ready(function () { jQuery('#parallax-pagetitle').parallax("50%", -0.55); });</script>
    <div class="parallax-effect">
        <div id="parallax-pagetitle" style="background-image: url(http://www.slashdown.net/starhotel-wp/wp-content/uploads/2015/03/parallax-01.jpg);">
            <div class="color-overlay">
                <!-- Page title -->
                <div class="container">
                    <div class="row">
                        <div class="col-sm-12">
                            <ol class="breadcrumb"><li><a href="">Trang chủ</a></li><li><a href="articles" rel="category tag">Tin tức</a></li><li class='current'>Hồ bơi đẹp nhất Châu Á</li></ol>
                            <h1>@Model.Article.Title</h1>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <!-- Blog -->
            <div class="single">
                <div class="blog mt50">

                    <div class=" col-md-12 ">
                        <div id="primary" class="content-area">
                            <!-- Blog -->
                            <article class="post-165 post type-post status-publish format-standard has-post-thumbnail hentry category-pool tag-activities tag-gym tag-lounge tag-pool">
                                <img width="940" height="344" src="@Model.Article.CoverImage.Url" class="img-responsive wp-post-image" alt="" 
                                      sizes="(max-width: 940px) 100vw, 940px" />    <div class="row">
                                    <div class="col-sm-1 col-xs-2 meta">
                                        <div class="meta-date"><span>Mar</span>18</div>
                                    </div>
                                    <div class="col-sm-11 col-xs-10 meta">
                                        <h2>@Model.Article.Title</h2>            <span class="meta-author"><i class="fa fa-user"></i><a href="articles" title="Posts by Slashdown" rel="author">@Model.Article.Author</a></span>
                                       
                                    </div>
                                    <div class="col-md-12">
                                        <div class="vc_row wpb_row vc_row-fluid">
                                            <div class="wpb_column vc_column_container vc_col-sm-12">
                                                <div class="vc_column-inner ">
                                                    <div class="wpb_wrapper">
                                                       @Html.Raw(Model.Article.Html)
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </article>

                            <nav class="row" role="navigation">
                                <div class="col-md-12">
                                    <div class="nav-previous"><a href="articles" rel="prev"><span class="meta-nav"><i class="fa fa-arrow-left" aria-hidden="true"></i></span>Trở lại trang tin tức</a></div>
                                </div><!-- .nav-links -->
                            </nav><!-- .navigation -->
                            <!-- Blog: Comments -->
                        </div>
                    </div>
                </div>
                

            </div>
        </div>
    </div>


</div>

