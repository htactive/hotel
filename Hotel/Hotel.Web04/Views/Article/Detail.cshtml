                                        <h2>@Model.Article.Title</h2>            <span class="meta-author"><i class="fa fa-user"></i><a href="articles" title="Posts by Slashdown" rel="author">Slashdown</a></span>
                                        <span class="meta-category"><i class="fa fa-pencil"></i><a href="articles" rel="category tag">Pool</a></span>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="vc_row wpb_row vc_row-fluid">
                                            <div class="wpb_column vc_column_container vc_col-sm-12">
                                                <div class="vc_column-inner ">
                                                    <div class="wpb_wrapper">
