<div class="container margin_60">
    <div class="row">
        <div class="col-md-8">

            <div id="message-contact"></div>
            <form method="post" action="assets/contact.php" id="contactform">
                <div class="row">
                    <div class="col-md-6 col-sm-6">
                        <div class="form-group">
                            <label>Họ</label>
                            <input type="text" class="form-control" id="name_contact" name="name_contact" placeholder="Họ">
                        </div>
                    </div>
                    <div class="col-md-6 col-sm-6">
                        <div class="form-group">
                            <label>Tên</label>
                            <input type="text" class="form-control" id="lastname_contact" name="lastname_contact" placeholder="Tên">
                        </div>
                    </div>
                </div>
                <!-- End row -->
                <div class="row">
                    <div class="col-md-6 col-sm-6">
                        <div class="form-group">
                            <label>Email</label>
                            <input type="email" id="email_contact" name="email_contact" class="form-control" placeholder="Email">
                        </div>
                    </div>
                    <div class="col-md-6 col-sm-6">
                        <div class="form-group">
                            <label>Số điện thoại</label>
                            <input type="text" id="phone_contact" name="phone_contact" class="form-control" placeholder="Số điện thoại">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label>Tin nhắn</label>
                            <textarea id="message_contact" name="message_contact" class="form-control" placeholder="Nội dung tin nhắn" style="height:150px;"></textarea>
                        </div>
                    </div>
                </div>
                <div class="row add_bottom_30">
                    <div class="col-md-6">
                        <input type="submit" value="Gửi tin" class="btn_1" id="submit-contact">
                    </div>
                </div>
            </form>
        </div><!-- End col-md-8 -->

        <div class="col-md-4">
            <div class="box_style_1">
                <h3>Liên hệ</h3>
                <h5>Địa chỉ</h5>
                <p>@(companyInfo.Address1)</p>
                <h5>Số điện thoại</h5>
                <p><a href="tel:@(companyInfo.Phone1)">@(companyInfo.Phone1)</a></p>
                <h5>Email</h5>
                <p><a href="mailto:@(companyInfo.Email1)"><span class="__cf_email__" >@(companyInfo.Email1)</span></a></p>
                <p>@(companyInfo.ShortDescription)</p>
            </div>
        </div><!-- End col-md-4 -->
    </div><!-- End row -->
</div><!-- End Container -->