
@{
    ViewData["Title"] = "Chi tiết tin";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var newestArticles = (List<Hotel.WebBase.Models.ArticleModel>)ViewBag.NewestArticles;
}

@model Hotel.WebBase.Models.ArticleDetailPageViewModel

<title> @ViewData["Title"]</title>

<!-- content begin -->
<div id="content">
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <div class="blog-read">
                    <div>
                        <div class="info">
                            <div class="date-box">
                                <span class="day"> @Model.Article.CreatedDate.Value.Day</span>
                                <span class="month">Tháng @Model.Article.CreatedDate.Value.Month</span>
                            </div>
                        </div>
                        <div class="preview">
                            <img src="@(Model.Article.CoverImage?.Url ?? "/assets/img/blank_block.jpg")" alt="@Model.Article.Title" class="post-img">
                            <h3 class="blog-title">@Html.Raw(Model.Article.Title)</h3>
                            <p>@Html.Raw(Model.Article.ShortDescription)</p>
                            @Html.Raw(Model.Article.Html)
                        </div>
                        <div class="meta-info">Đăng bởi: @Model.Article.Author</div>
                    </div>
                </div>

            </div>

            <div id="sidebar" class="col-md-4">

                <div class="widget latest_news">
                    <h3>Tin tức mới</h3>
                    <ul class="bloglist-small">
                        @if (newestArticles != null)
                        {
                            foreach (var article in newestArticles)
                            {
                            <li>
                                <div class="date-box">
                                    <span class="day"> @article.CreatedDate.Value.Day</span>
                                    <span class="month">Tháng @article.CreatedDate.Value.Month</span>
                                </div>
                                <div class="txt">
                                    <h5><a href="article/@(Hotel.WebBase.Helpers.SlugOrIdHelper.EncodeSlugOrId(article.Slug, article.Id))">@article.Title</a></h5>
                                    <div>
                                        <div>@Html.Raw(article.ShortDescription)</div>
                                    </div>
                                </div>
                            </li>
                            }
                        }
                    </ul>
                </div>

